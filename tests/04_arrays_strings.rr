// 04_arrays_strings.rr
print("Test 04: Arrays & Strings");
let fail = 0;

// Arrays
let arr = [10, 20];
arr.push(30);
if (arr.size() != 3) { print("FAIL: array push size"); fail = 1; }
if (arr[2] != 30) { print("FAIL: array access"); fail = 1; }
arr.pop();
if (arr.size() != 2) { print("FAIL: array pop size"); fail = 1; }

// Strings
let s = "hello";
s = s + " world";
if (s.length != 11) { print("FAIL: string length"); fail = 1; }
if (s.substr(0, 5) != "hello") { print("FAIL: substr"); fail = 1; }

if (fail == 0) { print("ALL TESTS PASSED"); } else { print("FAIL"); }
