// 03_funcs.rr
print("Test 03: Funcs");
let fail = 0;

func add(a, b) {
    return a + b;
}

if (add(10, 20) != 30) { print("FAIL: simple return"); fail = 1; }

// Recursion
func fib(n) {
    if (n <= 1) { return n; }
    return fib(n-1) + fib(n-2);
}
// 0 1 1 2 3 5 8
if (fib(6) != 8) { print("FAIL: recursion"); fail = 1; }

if (fail == 0) { print("ALL TESTS PASSED"); } else { print("FAIL"); }
