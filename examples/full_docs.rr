// 8. Async & Networking
// ---------------------
console.log("\n--- 8. Async & Fetch ---");
async fn fetchData() {
    print("Fetching data from dummyjson...");
    // Blocking fetch for now
    let res = await fetch("https://dummyjson.com/products/1");
    print("Result length:", res.length());
    print("Preview:", res.substr(0, 50));
}
fetchData();

