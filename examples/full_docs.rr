// 6. Object Oriented Programming
// ------------------------------
console.log("\n--- 6. OOP ---");
class User {
    let name = "";
    let age = 0;

    func init(n, a) {
        this.name = n;
        this.age = a;
    }

    func greet() {
        print("Hello, I am", this.name, "and I am", this.age, "years old.");
    }
}

let u = new User();
u.init("Alice", 25);
u.greet();

