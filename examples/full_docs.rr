// 2. Control Flow
// ---------------
console.log("\n--- 2. Control Flow ---");

// If-Else
if (x > 5) {
    console.log("x is > 5");
} else {
    console.log("x is <= 5");
}

// Loops
console.log("Looping:");
for (let i = 0; i < 3; i = i + 1) {
    console.log("i =", i);
}

// Switch
let opt = 1;
switch (opt) {
    case 1: { console.log("Selected Option 1"); break; }
    case 2: { console.log("Selected Option 2"); break; }
    default: { console.log("Default Option"); }
}

// 3. Functions
// ------------
console.log("\n--- 3. Functions ---");
func add(a, b) {
    return a + b;
}
console.log("add(5, 10) =", add(5, 10));

// Recursion (Factorial)
func factorial(n) {
    if (n <= 1) { return 1; }
    return n * factorial(n - 1);
}
console.log("factorial(5) =", factorial(5));

